{
    // Use the root directory for configuration
    // any overriding configs defined here
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "sourceMap": true,
      "lib": ["ESNext"],
      "paths": {
        "*": ["*"]
      }
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "dist"]
}